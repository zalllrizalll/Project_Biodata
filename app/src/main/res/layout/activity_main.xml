<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2c0a5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fotoku"
            >
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muhammad Rizal Pratama"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="A11.2021.13329"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rebahan"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shadow"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="My name is Rizal Pratama. I'm 20 years old. I study at Dian Nuswantoro University currently in semester 3. I want to be Expert Software Developer. Pray for me to be a good Software Developer."
        android:textAlignment="center"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:rowCount="1"
        android:columnCount="3"
        >

        <Button
            android:id="@+id/btnTelp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:fontFamily="sans-serif-medium"
            android:onClick="cellPhone"
            android:text="Call Me"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold">
        </Button>

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10sp"
            android:text="Send Email"
            android:onClick="sendEmail"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            >
        </Button>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="15sp"
            android:text="Show Maps"
            android:onClick="showMap"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            >
        </Button>
    </GridLayout>
</LinearLayout>